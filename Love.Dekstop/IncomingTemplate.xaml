<UserControl x:Class="Love.Dekstop.IncomingTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Love.Dekstop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataTemplate>
        <StackPanel>
        <Border x:Name="TemplateBorder"
                Padding="80,10,10,10"  >
            <Grid>
                <Border Background="#151515" CornerRadius="10" Width="Auto">
                        <TextBlock VerticalAlignment="Center" TextWrapping="Wrap" 
                               FontWeight="Bold" Foreground="White"
                               Margin="0,0,30,0" Text="{Binding Path=Text}">
                        </TextBlock>
                </Border>
            </Grid>
        </Border>
    </StackPanel>
    </DataTemplate> 
</UserControl>
